  <script type="module">
    import { createClient } from "https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm";

    const SUPABASE_URL = "https://gsvehqeywmjqlvuzwvuo.supabase.co";
    const SUPABASE_ANON_KEY = "sb_publishable_PCpsmoo77V5L0YQfT2yKnA_QCEFpARJ";

    const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

    const $ = (id) => document.getElementById(id);
    const setMsg = (t) => { $("msg").textContent = t || ""; };

    $("btn").addEventListener("click", async () => {
      const btn = $("btn");
      if (btn.disabled) return;
      setMsg("");
      const email = $("email").value.trim();
      const password = $("password").value;

      if (!email || !password) return setMsg("メールとパスワードを入力してね。");

      btn.disabled = true;

      const { error } = await supabase.auth.signUp({
        email,
        password,
        options: {
          emailRedirectTo: new URL("auth-callback.html", location.href).toString()
        }
      });

      if (error) {
        btn.disabled = false;
        return setMsg("エラー: " + error.message);
      }

      setMsg("メールを送信しました！\n確認メールを開いて認証を行なってください。");
    });
  </script>
  <script src="./cache-version.js"></script>
